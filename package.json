{
  "name": "@gingacodemonkey/update-dotenv",
  "version": "1.0.0",
  "description": "Write updates to a .env file",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --outDir dist --minify --clean",
    "test": "node --import tsx --test test/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adrianbrowning/update-dotenv.git"
  },
  "keywords": [
    "dotenv"
  ],
  "exports": {
    ".": {
      "import": {
        "import": "./dist/index.js",
        "require": "./built/index.js",
        "default": "./built/index.js",
        "types": "./built/index.d.ts"
      },
      "require": {
        "import": "./built/index.cjs",
        "require": "./built/index.cjs",
        "default": "./built/index.cjs",
        "types": "./built/index.d.cts"
      }
    }
  },
  "author": "Adrian Elton-Browning <gingacodemonkey@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/adrianbrowning/update-dotenv/issues"
  },
  "homepage": "https://github.com/adrianbrowning/update-dotenv#readme",
  "devDependencies": {
    "dotenv": "^16.4.5",
    "tsup": "^8.1.0",
    "typescript": "^5.5.3",
    "tsx": "^4.16.2",
    "@types/node": "^20.14.10"
  },
  "peerDependencies": {
    "dotenv": "*"
  }
}
